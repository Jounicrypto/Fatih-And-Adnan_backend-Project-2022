<%- include('components/header') -%>


<form method="POST" action="/edit-question/<%= question.id %>" class="login" >
    <div class="mb-3">
        <label for="titleInputEmail1" class="form-label">Question</label>
        <input value="<%=question.question%>"  name="question" type="text" class="form-control" id="titleInputEmail1" aria-describedby="titleHelp">
    </div>

    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Description</label>
        <textarea value="<%=question.description%>" name="description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
      </div>
    
    <button type="submit" class="btn btn-primary">submit</button>
</form>





